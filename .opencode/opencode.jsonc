{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "clangd": {
      "command": ["clangd", "--compile-commands-dir=build/agent"],
    },
  },
  "permission": {
    "bash": {
      "~/Qt/6.10.1/macos/bin/qt-cmake": "allow",
    },
  },
  "watcher": {
    "ignore": ["Makefile"],
  },
  "formatter": {
    "qmlformat": {
      "command": ["qmlformat", "-i", "$FILE"],
      "extensions": [".qml"],
    },
  },
}
